<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background= "@color/white"
            >

            <TextView
                android:id="@+id/orderKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/booking_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_below="@+id/orderKey"
                />


            <TextView
                android:id="@+id/orderStatus_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/booking_time"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/black"

                />

            <TextView
                android:id="@+id/view_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View More Details"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/orderStatus_text"
                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>
